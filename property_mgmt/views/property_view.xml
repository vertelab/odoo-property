<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="property_property_kanban_view" model="ir.ui.view">
            <field name="name">property.property.kanban.view</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="created_date"/>
                    <field name="acquired_date"/>
                    <field name="size"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-6 o_kanban_record_headings">
                                        <strong>
                                            <span>
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <strong>
                                            <i aria-label="Date" class="fa fa-clock-o" role="img" title="Date"/>
                                            <t t-esc="record.created_date.value"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span>
                                            <field name="state_id"/>
                                        </span>
                                        <span>
                                            <field name="country_id"/>
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right">
                                            <field name="state" options="{'classes': {'new': 'warning', 'ok': 'success', 'archived': 'danger'}}" widget="label_selection"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="property_property_tree_view" model="ir.ui.view">
            <field name="name">property.property.tree.view</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="acquired_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="property_property_form_view" model="ir.ui.view">
            <field name="name">property.property.form.view</field>
            <field name="model">property.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button class="btn btn-primary" invisible="state not in ['new']" name="approved_property" string="All Checked" type="object"/>
                        <field name="state" options="{'clickable': '1'}" statusbar_visible="new,ok,archived" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field default_focus="1" name="name" placeholder="Description" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field class="o_address_street" name="street" placeholder="Street..."/>
                                    <field class="o_address_street" name="street2" placeholder="Street 2..."/>
                                    <field class="o_address_city" name="city" placeholder="City"/>
                                    <field class="o_address_state" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" name="state_id" options="{'no_open': True, 'no_quick_create': True}" placeholder="State"/>
                                    <field class="o_address_zip" name="zip" placeholder="ZIP"/>
                                    <field class="o_address_country" name="country_id" options='{"no_open": True, "no_create": True}' placeholder="Country"/>
                                </div>
                                <field name="acquired_date"/>
                            </group>
                            <group>
                                <field name="property_status"/>
                                <field name="size"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="property_stakeholders" string="Stakeholders">
                                <field name="stakeholder_ids">
                                    <tree editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="partner_status"/>
                                        <field name="stakeholder_tax_unit"/>
                                        <field name="owner_numerator"/>
                                        <field name="owner_denominator"/>
                                        <field name="percentage"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property_property" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.property</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem action="property_mgmt.action_property_property" id="property_property_menu" name="Properties" parent="property_mgmt.property_parent_menu" sequence="5"/>
    </data>
</odoo>
